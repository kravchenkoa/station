profile = "vcs/pull-request@1.0"
provider = "github"

map PullRequest{
  owner = input.owner
  repo = input.repo
  identifier = input.identifier

  http GET "/repos/{owner}/{repo}/pulls/{identifier}" {
    response 200 "application/json" {
       map result {
        title: body.title,
        id: body.id,
        url: body.url,
        sha: body.head.sha,
      }
    }
  }
}
